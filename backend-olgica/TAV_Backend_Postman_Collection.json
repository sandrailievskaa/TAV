								"app",
								"test",
								"{{test_id}}"
							],
							"description": "Заменете {{test_id}} со вистински GUID"
						},
						"description": "Добиј еден Test запис по ID (GUID)"
					},
					"response": []
				},
				{
					"name": "Create Test",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200 || pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"test_id\", jsonData.id);",
									"    console.log(\"Created test with ID: \" + jsonData.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
